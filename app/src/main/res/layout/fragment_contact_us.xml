<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tutoring"
    tools:context=".Fragments.ContactUs">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title_contact_us"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/description_contact_us"
        android:gravity="center"
        android:text="@string/contact_us"
        android:textColor="#FFFFFF"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/description_contact_us"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/contact_desc"
        android:textColor="#FFEB3B"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/office_title_contact_us"
        app:layout_constraintTop_toBottomOf="@+id/title_contact_us" />

    <TextView
        android:id="@+id/office_title_contact_us"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="OFFICE LOCATIONS AND TIMINGS"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/description_contact_us"
        app:layout_constraintBottom_toTopOf="@id/office_location_contact_us"/>

    <TextView
        android:id="@+id/office_location_contact_us"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="ECST C-245"
        app:layout_constraintTop_toBottomOf="@id/office_title_contact_us"
        app:layout_constraintBottom_toTopOf="@id/office_times_contact_us"/>

    <TextView
        android:id="@+id/office_times_contact_us"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="Thrusday: 3:00 to 4:20"
        app:layout_constraintTop_toBottomOf="@id/office_location_contact_us"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
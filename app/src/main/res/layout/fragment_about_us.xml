<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/acm_small"
    tools:context=".Fragments.AboutUs">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/who_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Who are we?"
        android:textColor="#FF0000"
        android:background="#000000"
        android:textSize="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/who_description_about_us"/>

    <TextView
        android:id="@+id/who_description_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/who_desc"
        android:textColor="#FF0000"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/who_about_us"
        app:layout_constraintBottom_toTopOf="@+id/what_about_us"/>

    <TextView
        android:id="@+id/what_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="What is our mission?"
        android:background="#000000"
        android:textColor="#FF0000"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/what_description_about_us"
        app:layout_constraintBottom_toTopOf="@id/what_description_about_us"/>

    <TextView
        android:id="@+id/what_description_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#000000"
        android:text="@string/what_desc"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/what_about_us"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>